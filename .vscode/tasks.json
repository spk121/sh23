{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake-configure-msvc-ucrt",
      "type": "shell",
      "command": "C:/Program Files/CMake/bin/cmake.exe",
      "args": [
        "-S", "${workspaceFolder}",
        "-B", "${workspaceFolder}/out/build/x64-Debug",
        "-G", "Ninja",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DAPI_TYPE=UCRT"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "cmake-build-msvc-ucrt",
      "type": "shell",
      "command": "C:/Program Files/CMake/bin/cmake.exe",
      "args": [
        "--build",
        "${workspaceFolder}/out/build/x64-Debug",
        "--config", "Debug"
      ],
      "problemMatcher": {
        "owner": "msvc",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error)\\s+(C\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["cmake-configure-msvc-ucrt"]
    },
    {
      "label": "cmake-build-debug",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--config", "Debug", "--", "-j"],
      "options": { "env": { "PATH": "C:/Program Files/CMake/bin;C:/msys64/ucrt64/bin;${env:PATH}" } },
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "clean-msvc-build",
      "type": "shell",
      "command": "C:/Program Files/CMake/bin/cmake.exe",
      "args": [
        "--build",
        "${workspaceFolder}/out/build/x64-Debug",
        "--target", "clean"
      ],
      "problemMatcher": []
    }
  ]
}